// app/reviews/page.tsx
import { PageViewTracker } from "@/components/page-view-tracker"
import { logEvent } from "@/lib/analytics"
import Button from "@/components/button"
import Send from "@/components/send-icon"

export default function ReviewsPage() {
  return (
    <div>
      <PageViewTracker page="/reviews" />
      {/* rest of code here */}
      <Button
        size="sm"
        className="h-8 px-3 text-xs bg-gray-900 text-white hover:bg-gray-700 rounded-md"
        onClick={() => logEvent("review_response_sent", { message: "Response sent from Reviews page" })}
      >
        <Send className="h-3 w-3 mr-1" />
        Send Response
      </Button>
    </div>
  )
}

