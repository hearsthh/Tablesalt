import { Send } from 'lucide-react'

export default function ReviewsPage() {
  return (
    <div>
      <PageViewTracker page="/reviews" />
      {/* rest of code here */}
      <Button
        size="sm"
        className="h-8 px-3 text-xs bg-gray-900 text-white hover:bg-gray-700 rounded-md"
        onClick={() => console.log("Response sent from Reviews page")}
      >
        <Send className="h-3 w-3 mr-1" />
        Send Response
      </Button>
    </div>
  )
}

// app/marketing/page.tsx
import { PageViewTracker } from "@/components/page-view-tracker"
import { Button } from "@/components/ui/button"
import { toast } from "@/hooks/use-toast"

export default function MarketingPage() {
  return (
    <div>
      <PageViewTracker page="/marketing" />
      {/* rest of code here */}
      <Button
        onClick={() => { 
          toast({ title: "New Strategy", description: "Creating a new marketing strategy." }); 
          console.log("New strategy initiated"); 
        }}
      >
        New Strategy
      </Button>
      {/* rest of code here */}
      <Button
        onClick={() => console.log("Started campaign")}
      >
        Start
      </Button>
    </div>
  )
}

